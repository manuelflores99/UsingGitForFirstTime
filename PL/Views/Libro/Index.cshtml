@using PL.Models.DTO
@model Libro
<h3>Libros</h3>

<div style="margin: 20px">
    <!-- Button trigger modal -->
    <button type="button" onclick="Limpiar()" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#miModal">
        Agregar Libro
    </button>
</div>

<div class="container">
    <table class="table table-striped table-responsive">
        <thead class="table table-dark">
            <tr>
                 <th></th>
                <th>Titulo</th>
                <th>Autor</th>
                <th>ISBN</th>
                <th>Año Publicación</th>
                <th>Editorial</th>
                <th>Ciudad</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="Show">
            @foreach(var libro in Model.Libros)
            {
                <tr>
                    <td><button onclick="GetById()" class="btn btn-success">Editar</button></td>
                    <td>@libro.Titulo</td>
                    <td>@libro.Autor</td>
                    <td>@libro.Isbn</td>
                    <td>@libro.AnioPublicacion.ToString("yyyy")</td>
                    <td>@libro.Editorial.Nombre</td>
                    <td>@libro.Ciudad.NombreCiudad</td>
                    <td><button onclick="Delete()" class="btn btn-danger">Eliminar</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!--------Modal------->
<div class="modal fade" id="miModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="textTituloModal">Agregar Libro</h5>
                <button id="closeM" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">

                 <div class="row justify-content-center">
                    <div class="col-7">
                        <input id="ddlIdLibro" class="form-control" type="hidden"/>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-7">
                        <label class="form-label" >Titulo</label>
                        <input id="ddlTitulo" class="form-control" type="text" placeholder="Titulo Libro" />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-7">
                        <label class="form-label">Autor</label>
                        <input id="ddlAutor" class="form-control" type="text" placeholder="Autor" />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-7">
                        <label class="form-label">ISBN</label>
                        <input id="ddlIsbn" class="form-control" type="text" placeholder="ISBN" />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-7">
                        <label class="form-label">Año de Publicacion</label>
                        <input class="form-control" type="date" id="ddlAnio" />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-7">
                        <label class="form-label">Editorial</label>
                        <select id="ddlEditorial" class="form-select">Selecciona una Opcion</select>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-7">
                        <label class="form-label">Ciudad</label>
                        <select id="ddlCiudad" class="form-select">Selecciona una Opcion</select>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button id="btnExit" type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                <button id="btnUpd" onclick="Update()" style="display: none" type="button" class="btn btn-success" data-bs-dismiss="modal">Guardar cambios</button>
                <button id="btnAdd" onclick="Add()" style="display: none"  type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>