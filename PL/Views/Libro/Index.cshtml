<h3>Libros</h3>

<div style="margin: 20px">
    <!-- Button trigger modal -->
    <button type="button" id="btnModal" onclick="Limpiar()" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#miModal">
        Agregar Libro
    </button>
</div>

<div class="container">
    <table id="miTabla" class="table table-striped table-responsive">
        <thead class="table table-dark">
            <tr>
                <th></th>
                <th>Titulo</th>
                <th>Autor</th>
                <th>ISBN</th>
                <th>Año Publicación</th>
                <th>Editorial</th>
                <th>Ciudad</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="showLibros"></tbody>
    </table>
</div>

<!--------Modal------->
<div class="modal fade" id="miModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="textTituloModal">Agregar Libro</h5>
                <button id="closeM" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">

                <div class="row justify-content-center">
                    <div class="col-7">
                        <input id="ddlIdLibro" class="form-control" type="hidden" />
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-7">
                        <label class="form-label">Titulo</label>
                        <input id="ddlTitulo" class="form-control" type="text" placeholder="Titulo Libro" onkeyup="LetrasYNumeros(this,'lblTitulo')" />
                        <label id="lblTitulo" style="color: red"></label>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-7">
                        <label class="form-label">Autor</label>
                        <input id="ddlAutor" class="form-control" type="text" placeholder="Autor" onkeyup="SoloLetras(this,'lblAutor')" />
                        <label id="lblAutor" style="color: red"></label>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-7">
                        <label class="form-label">ISBN</label>
                        <input id="ddlIsbn" class="form-control" type="text" placeholder="ISBN" onblur="Isbn(this, 'lblIsbn')" />
                        <label id="lblIsbn" style="color: red"></label>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-7">
                        <label class="form-label">Año de Publicacion</label>
                        <input class="form-control" type="number" id="ddlAnio" onblur="SoloNumeros(this, 'lblAnio')" />
                        <label id="lblAnio" style="color: red"></label>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-7">
                        <label class="form-label">Editorial</label>
                        <select id="ddlEditorial" class="form-select">Selecciona una Opcion</select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnExit" type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                <button id="btnUpd" onclick="ValidarCampos(), Update()" style="display: none" type="button" class="btn btn-success" data-bs-dismiss="modal">Guardar cambios</button>
                <button id="btnAdd" onclick="Add()" style="display: none" type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/LibroAjax.js" asp-append-version="true"></script>

